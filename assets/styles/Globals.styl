@import url('https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap')
@import './Variables'

body
  margin: 0
  padding: 0
  color: $color-dark
  font-family: $font-primary
  background-color: $color-light

.btn
  width: 35px
  height: 35px
  margin: 0
  padding: 0
  background-color: rgba(0,0,0,0)
  border: none

  &:hover
    cursor: pointer

  &-img
      width: 100%
      height: 100%

.page-title
  min-width: calc(100vw - 110px)
  font-size: 25px
  font-weight: 400
  color: $color-secondary

.text-container
  display: flex
  flex-direction: column
  align-items: center

p
  width: calc(100vw - 110px)
  margin-top: 0
  padding: 0
  font-size: 20px
  line-height: 30px

  a
    color: $color-secondary
