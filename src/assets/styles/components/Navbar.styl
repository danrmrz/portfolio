@import '../Variables'

.navbar
  display: flex
  justify-content: center
  margin: 15px 0 25px

  &-container
    display: flex
    width: calc(100% - 100px)
    min-width: 265px
    max-width: 450px
    justify-content: space-between
  
  &__link
    color: $color-dark
    text-decoration: none
    font-size: 16px

  &__link:hover
    box-shadow: 0px 3px $color-details

  &__link.active
    box-shadow: 0px 3px $color-secondary