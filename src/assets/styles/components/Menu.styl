@import '../Variables'

@keyframes intro {
  0% {
    transform: translateX(-200px)
  }
  100% {
    transform: translateX(0px)
  }
}

@keyframes out {
  0% {
    transform: translateX(0px)
  }
  100% {
    transform: translateX(-200px)
  }
}

@keyframes appear {
  0% {
    background-color: rgba($color-dark, 0)
  }
  100% {
    background-color: rgba($color-dark, 0.3)
  }
}

@keyframes disappear {
  0% {
    background-color: rgba($color-dark, 0.3)
  }
  100% {
    background-color: rgba($color-dark, 0)
  }
}

.menu-container
  width: 100vw
  height: 100vh
  position: absolute
  top: 0
  background-color: rgba($color-dark, 0.3)
  margin: 0
  padding: 0
  z-index: 1
  animation: appear 1s

.menu-container.close
  animation: disappear 1s

.menu
  display: flex
  width: 180px
  height: 100vh
  flex-direction: column
  background-color: $color-primary
  margin: 0
  padding: 0
  position: absolute
  left 0
  z-index: 2
  animation: intro 1s

  &__button-container
    display: flex
    justify-content: flex-end
    padding: 10px

  &__button
    width: 35px
    height: 35px

  &__links
    display: grid
    
    // grid-template-rows: 25px 25px 100px
    grid-template-rows: 50px 50px 100px

    &--titles
      width: 125px
      margin-left: 20px
      margin-top: 25px
      color: $color-light
      font-size: 18px
      text-decoration: none
      box-shadow: 0px 2px $color-details

  &__social
    display: grid
    grid-template-rows: auto

    &-links
      display: flex
      width: 125px
      margin-left: 20px
      margin-top: 15px
      justify-content: space-between

      &--images
        height: 28px
  
  &__made
    margin-left: 20px
    font-size: 12px
    color: $color-details
    position: absolute
    bottom: 20px

    &--image
      height: 15px
      margin-right: 5px
    
.menu.close
  animation: out 1s

.clickToClose
  width: 100vw
  height: 100vh
